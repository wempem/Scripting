<% include partials/header %>

<div class="container">

    <h1><%= title %></h1>

    <ul>
        <% tasks.forEach(function (tasks) { %>
            <li><%= tasks.title %> <%= tasks.description %></l1>
        <% }) %>
    </ul>

    <h2>Add tasks</h2>

    <% if (errors != undefined) { %>
        <ul>
        <% errors.forEach(function(error) { %>
            <li><%= error.msg %></li>
        <% }) %>
        </ul>
    <% } %>

    <form method="POST" action="/tasks/add">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="tasks" id="tasks" placeholder="John">
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" name="description" id="description" placeholder="Doe">
        </div>

        <div class="form-group">
            <label for="statuss">Status</label>
            <input type="text" name="status" id="status" placeholder="john@doe.com">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>

<% include partials/footer %>
