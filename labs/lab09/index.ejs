<% include partials/header %>

<div class="container">

    <h1><%= title %></h1>

    <ul>
        <% tasks.forEach(function (tasks) { %>
            <li>
                <%= task.task_id %> 
                <%= task.title %>
                <a href="#" class="updateTask" data-id="<%= task._id %>">Update</a>
                <a href="#" class="deleteTask" data-id="<%= task._id %>">Delete</a>
            </l1>
            <ul>
                <li>Description: <%= task.description %></li>
                <li>Statuss: <%= task.statuss %></li>
                <li>Grade: <%= task.grade %></li>
            </ul>
        <% }) %>
    </ul>

    <h2>Add Task</h2>

    <% if (errors != undefined) { %>
        <ul>
        <% errors.forEach(function(error) { %>
            <li><%= error.msg %></li>
        <% }) %>
        </ul>
    <% } %>

    <form method="POST" action="/tasks/add">
        <div class="form-group">
            <label for="task_id">Task ID</label>
            <input type="text" name="task_id" id="task_id" placeholder="John">
        </div>

        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" placeholder="Doe">
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" name="description" id="description" placeholder="john@doe.com">
        </div>

        <div class="form-group">
            <label for="statuss">Statuss</label>
            <input type="text" name="statuss" id="statuss" placeholder="Sociology">
        </div>

        <div class="form-group">
            <label for="grade">Grade</label>
            <input type="text" name="grade" id="grade" placeholder="3.0">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>

<% include partials/footer %>
